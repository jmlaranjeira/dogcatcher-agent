# syntax=docker/dockerfile:1.7
FROM python:3.11-slim AS base

# System deps (build + runtime + cron)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential curl ca-certificates cron \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Leverage Docker layer caching: copy requirements first
COPY requirements.txt /app/requirements.txt

# Install dependencies + pydantic-settings (missing from requirements)
RUN pip install --no-cache-dir -r /app/requirements.txt pydantic-settings

# Copy source
COPY . /app

# Create cache directory with proper permissions
RUN mkdir -p /app/.agent_cache && chmod 777 /app/.agent_cache

# Script de ejecuci√≥n
COPY <<'EOF' /app/run_agent.sh
#!/bin/bash
cd /app
echo "=========================================="
echo "[$(date)] Starting scheduled execution"
echo "=========================================="
python main.py --real
echo "[$(date)] Execution completed"
echo ""
EOF
RUN chmod +x /app/run_agent.sh

# Minimal healthcheck
HEALTHCHECK --interval=30s --timeout=5s --start-period=20s --retries=3 \
  CMD python -c "import importlib.util, sys; sys.exit(0 if importlib.util.find_spec('agent') else 1)"

ENV PYTHONUNBUFFERED=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    AGENT_CACHE_DIR=/app/.agent_cache

# Entrypoint script
COPY <<'ENTRY' /app/entrypoint.sh
#!/bin/bash
set -e

echo "üêï Dogcatcher Agent starting..."
echo "üìÖ Schedule: ${DOGCATCHER_SCHEDULE:-0 * * * *}"

# Ejecutar una vez al arrancar
echo "üöÄ Running initial execution..."
python main.py --real || echo "‚ö†Ô∏è Initial run failed, but continuing with scheduler"

echo ""
echo "‚è∞ Starting scheduler (cron: ${DOGCATCHER_SCHEDULE:-0 * * * *})"
echo "   Next executions will run automatically."
echo "   Use 'docker logs dogcatcher-agent -f' to monitor."
echo ""

# Exportar variables de entorno en formato compatible con shell
printenv | sed 's/=\(.*\)/="\1"/' > /app/.env.cron

# Crear script wrapper que carga las variables
cat > /app/run_with_env.sh << 'WRAPPER'
#!/bin/bash
set -a
source /app/.env.cron
set +a
cd /app
echo "=========================================="
echo "[$(date)] Starting scheduled execution"
echo "=========================================="
python main.py --real
echo "[$(date)] Execution completed"
echo ""
WRAPPER
chmod +x /app/run_with_env.sh

# Crear crontab
echo "${DOGCATCHER_SCHEDULE:-0 * * * *} /app/run_with_env.sh >> /proc/1/fd/1 2>&1" | crontab -

# Ejecutar cron en foreground
exec cron -f
ENTRY
RUN chmod +x /app/entrypoint.sh

ENTRYPOINT ["/app/entrypoint.sh"]
